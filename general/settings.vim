set relativenumber
set smarttab
set cindent
set tabstop=2
set shiftwidth=2
set encoding=UTF-8
set hidden
set mouse=a

" always uses spaces instead of tab characters
set expandtab

" turns on preview in substitution command: %s/jhon/john/g
" %s   = substition in all lines 
" jhon = word to be replaced
" jon  = replaced word
" g    = all occurrencies in the same line
set inccommand=split

syntax enable
colorscheme dracula
set background=dark

filetype plugin on

