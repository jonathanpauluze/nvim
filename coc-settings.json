{
  "suggest.noselect": false,

  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "markdown",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "graphql"
  ],

  "eslint.packageManager": "yarn",
  "eslint.autoFixOnSave": true,

  "prettier.onlyUseLocalVersion": true,
  "prettier.requireConfig": true,
  "prettier.eslintIntegration": true,

  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "wxss.validate": false,

  "coc.source.emoji.filetypes": [
    "javascript",
    "markdown"
  ],
  "coc.source.emoji.triggerCharacters": [":", ";", "_"]
}
